.top
  .top__container
    .sign
      .sign__top
        %pプロフィール編集
      .sign__container
        = form_with model: @user, local: true do |f|
          -if @user.errors.any?
            .alert
              %ul
                - @user.errors.full_messages.each do |message| 
                  %li= message
          .field
            = f.label :名前
            %br
            = f.text_field :nickname, autofocus: true, autocomplete: "name",class: "sign__container--input"
          .field
            = f.label :メールアドレス 
            %br
            = f.email_field :email, placeholder:"メールアドレス", autofocus: true, autocomplete: "email",class: "sign__container--input"
          -# .field
          -#   = f.label :パスワード
          -#     -if @minimum_password_length
          -#   %br
          -#   = f.password_field :password, autocomplete: "new-password",class: "sign__container--input"

          -# .field
          -#   = f.label :パスワード確認 
          -#   %br
          -#   = f.password_field :password_confirmation, autocomplete: "new-password",class: "sign__container--input"

          .field
            = f.label :画像を選択して下さい 
            %br
            = f.file_field :image,class: "sign__container--input"

          .actions
          = f.submit "登録", class:"btn"
 
