.task
  .task__show

    %p
      %b.task__show--title タスクのタイトル:
      = @task.title
    %p
      %b.task__show--content メモ:
      = @task.content
    %p
      %b.task__show--start_date 開始日:
      = @task.start_date.to_s(:datetime_jp)
    %p
      %b.task__show--end_date 終了日:
      = @task.end_date.to_s(:datetime_jp)

    = link_to '編集', edit_user_task_path(@task, current_user)
    \|
    = link_to '一覧に戻る', user_tasks_path(current_user)
